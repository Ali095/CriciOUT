@model IEnumerable<CricInfo.Models.Team>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Captain)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MatchPlayed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MatchWin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MatchLoose)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MatchTie)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Captain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatchPlayed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatchWin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatchLoose)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatchTie)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
